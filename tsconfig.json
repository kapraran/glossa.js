{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2016",
    "moduleResolution": "node",
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "outDir": "dist",
    "strictNullChecks": true,
    "experimentalDecorators": true,
    "strictFunctionTypes": false
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
